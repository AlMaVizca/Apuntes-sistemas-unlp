<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-configuration SYSTEM
"http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
	<session-factory>
		<property name="hibernate.dialect">
			org.hibernate.dialect.MySQLDialect
		</property>
		<property name="hibernate.connection.driver_class">
			com.mysql.jdbc.Driver
		</property>

		<property name="hibernate.connection.url">jdbc:mysql://localhost:3306/grupo20</property>
		<property name="hibernate.connection.username">grupo20</property>
		<property name="hibernate.connection.password">grupo20</property>

		<property name="hibernate.show_sql">true</property>
		<property name="hibernate.format_sql">
			true
		</property>
		<mapping resource="hibernate/mappings.hbm.xml" />
		
	</session-factory>
</hibernate-configuration>
